
@model List<Employee>
<div class="text-end">
    <a asp-controller="Employee" asp-action="CreateEmployee" class="btn btn-primary mb-3 ">Create Employee</a>
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Company</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var emp in Model){
        <tr>
            <td>@emp.Name</td>
            <td>@emp.Department</td>
            <td>@emp.Company</td>
            <td>
                <a class="btn btn-primary mx-2" asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@emp.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@emp.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
